<Page
    x:Class="PlanningBudget.Windows.Views.AddTransactionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PlanningBudget.Windows.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my="using:PlanningBudget.Windows.Views.Controls"
    mc:Ignorable="d"
    DataContext="{Binding AddTransaction, Source={StaticResource Locator}}">


    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/Themes/Dictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeToDateTimeOffsetConverter
                x:Key="DateTimeToDateTimeOffsetConverter" />
            <DataTemplate
                x:Key="ColorTemplate">
                <Grid
                    Background="{Binding}"
                    Width="160"
                    Height="24" />
            </DataTemplate>
            <DataTemplate
                x:Key="IconTemplate">
                <Grid>
                    <FontIcon
                        FontFamily="Segoe UI Symbol"
                        Foreground="Black"
                        Glyph="{Binding}" />
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush
                Stretch="Fill"
                ImageSource="ms-appx:///Assets/bg.png" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="6*" />
            <RowDefinition
                Height="28*" />
            <RowDefinition
                Height="6*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="6*" />
            <ColumnDefinition
                Width="16*" />
            <ColumnDefinition
                Width="34*" />
        </Grid.ColumnDefinitions>

        <my:HeaderControl
            Grid.ColumnSpan="3"
            Text="New transaction"
            BackCommand="{Binding GoBackCommand, Mode=OneTime}" />

        <Grid
            Grid.Row="1"
            Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="4*" />
                <RowDefinition
                    Height="4*" />
                <RowDefinition
                    Height="4*" />
                <RowDefinition
                    Height="4*" />
                <RowDefinition
                    Height="0*" />
                <RowDefinition
                    Height="4*" />
                <RowDefinition
                    Height="4*" />
                <RowDefinition
                    Height="4*" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="3"
                Margin="6">
                <TextBlock
                    Style="{StaticResource CaptionStyle}"
                    Text="Category" />
                <ComboBox
                    Style="{StaticResource ComboBoxStyle}"
                    ItemsSource="{Binding Path=Categories, Mode=TwoWay}"
                    SelectedItem="{Binding Path=SelectedCategory, Mode=TwoWay}" />
            </StackPanel>

            <StackPanel
                Grid.Column="0"
                Grid.Row="1"
                Grid.ColumnSpan="3"
                Margin="6">
                <TextBlock
                    Style="{StaticResource CaptionStyle}"
                    Text="Account" />
                <ComboBox
                    Style="{StaticResource ComboBoxStyle}"
                    ItemsSource="{Binding Path=Accounts, Mode=TwoWay}"
                    SelectedItem="{Binding Path=SelectedAccount, Mode=TwoWay}" />
            </StackPanel>

            <StackPanel
                Grid.Column="0"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="6">
                <TextBlock
                    Style="{StaticResource CaptionStyle}"
                    Text="Amount" />
                <TextBox
                    Style="{StaticResource TextBoxStyle}"
                    Text="{Binding Path=Amount, Mode=TwoWay}"
                    Height="32"
                    VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel
                Grid.Column="0"
                Grid.Row="3"
                Grid.ColumnSpan="3"
                Margin="6">
                <TextBlock
                    Style="{StaticResource CaptionStyle}"
                    Text="Name" />
                <TextBox
                    Style="{StaticResource TextBoxStyle}"
                    Text="{Binding Path=Name, Mode=TwoWay}"
                    Height="32"
                    VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel
                Grid.Column="0"
                Grid.Row="4"
                Grid.ColumnSpan="3"
                Margin="6">
                <TextBlock
                    Style="{StaticResource CaptionStyle}"
                    Text="Date" />
                <DatePicker
                    HorizontalAlignment="Stretch"
                    BorderBrush="#FF005AFF"
                    BorderThickness="1"
                    Date="{Binding Path=Date, Converter={StaticResource DateTimeToDateTimeOffsetConverter}, Mode=TwoWay}" />
            </StackPanel>

            <StackPanel
                Grid.Column="0"
                Grid.Row="5"
                Grid.ColumnSpan="3"
                Margin="6" />

            <Grid
                Grid.Row="6">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button
                    Style="{StaticResource ButtonStyle}"
                    Content="Save"
                    Grid.Column="0"
                    Margin="12"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Command="{Binding Path=SaveAndReturnCommand, Mode=OneTime}" />

                <Button
                    Style="{StaticResource ButtonStyle}"
                    Content="Save and add next"
                    Grid.Column="1"
                    Margin="12"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Command="{Binding Path=SaveAndContinueCommand, Mode=OneTime}" />
            </Grid>
        </Grid>
    </Grid>
</Page>

