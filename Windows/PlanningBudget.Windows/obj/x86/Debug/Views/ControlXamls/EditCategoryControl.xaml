<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PlanningBudget.Windows.Views.Controls">

    <Style
        x:Key="ComboBoxStyle"
        TargetType="ComboBox">
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
        <Setter
            Property="Height"
            Value="32" />
    </Style>
    <Style
        x:Key="CaptionStyle"
        TargetType="TextBlock">
        <Setter
            Property="FontSize"
            Value="16" />
        <Setter
            Property="HorizontalAlignment"
            Value="Left" />
        <Setter
            Property="TextWrapping"
            Value="Wrap" />
    </Style>
    <DataTemplate
        x:Key="ColorTemplate">
        <Grid
            Background="{Binding}"
            Width="160"
            Height="24" />
    </DataTemplate>
    <DataTemplate
        x:Key="IconTemplate">
        <Grid>
            <FontIcon
                FontFamily="Segoe UI Symbol"
                Foreground="Black"
                Glyph="{Binding}" />
        </Grid>
    </DataTemplate>

    <Style
        TargetType="local:EditCategoryControl">
        <Setter
            Property="Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="local:EditCategoryControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition
                                Height="*" />
                            <RowDefinition
                                Height="*" />
                            <RowDefinition
                                Height="*" />
                            <RowDefinition
                                Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="7*"
                                MinWidth="152" />
                            <ColumnDefinition
                                Width="2*"
                                MinWidth="48" />
                            <ColumnDefinition
                                Width="9*"
                                MinWidth="200" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Column="0"
                            Grid.Row="0"
                            Grid.ColumnSpan="3"
                            Margin="6">
                            <TextBlock
                                Style="{StaticResource CaptionStyle}"
                                Text="Name" />
                            <TextBox
                                Text="{Binding Path=CategoryName, Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                Height="32"
                                VerticalAlignment="Center" />
                        </StackPanel>

                        <StackPanel
                            Grid.Column="0"
                            Grid.Row="1"
                            Grid.ColumnSpan="3"
                            Margin="6">
                            <TextBlock
                                Style="{StaticResource CaptionStyle}"
                                Text="Type" />
                            <ComboBox
                                Style="{StaticResource ComboBoxStyle}"
                                IsEnabled="{Binding Path=IsAdding, RelativeSource={RelativeSource TemplatedParent}}"
                                ItemsSource="{Binding Path=Types, RelativeSource={RelativeSource TemplatedParent}}"
                                SelectedItem="{Binding Path=Type, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" />
                        </StackPanel>

                        <StackPanel
                            Grid.Column="0"
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Margin="6">
                            <TextBlock
                                Style="{StaticResource CaptionStyle}"
                                Text="Color" />
                            <ComboBox
                                Grid.Row="2"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Style="{StaticResource ComboBoxStyle}"
                                ItemTemplate="{StaticResource ColorTemplate}"
                                ItemsSource="{Binding Path=IconColours,
                                                RelativeSource={RelativeSource TemplatedParent}}"
                                SelectedItem="{Binding Path=IconColor, Mode=TwoWay,
                                                RelativeSource={RelativeSource TemplatedParent}}" />
                        </StackPanel>

                        <StackPanel
                            Grid.Column="2"
                            Grid.Row="2"
                            Margin="6">
                            <TextBlock
                                Style="{StaticResource CaptionStyle}"
                                Text="Icon" />
                            <ComboBox
                                Grid.Row="3"
                                Grid.Column="3"
                                Grid.ColumnSpan="1"
                                Style="{StaticResource ComboBoxStyle}"
                                ItemTemplate="{StaticResource IconTemplate}"
                                ItemsSource="{Binding Path=Icons, RelativeSource={RelativeSource TemplatedParent}}"
                                SelectedItem="{Binding Path=Icon, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" />
                        </StackPanel>

                        <Button
                            Content="Save"
                            Grid.Column="0"
                            Grid.ColumnSpan="{Binding Path=SaveButtonColumnSpan, RelativeSource={RelativeSource TemplatedParent}}"
                            Grid.Row="3"
                            Margin="6"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Command="{Binding Path=SaveAndReturnCommand, Mode=OneTime, RelativeSource={RelativeSource TemplatedParent}}" />
                        <Button
                            Content="Save and add next"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Grid.Row="3"
                            Margin="6"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Visibility="{Binding Path=ShowSaveAndAdd,RelativeSource={RelativeSource TemplatedParent}}"
                            Command="{Binding Path=SaveAndContinueCommand, Mode=OneTime,RelativeSource={RelativeSource TemplatedParent}}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

